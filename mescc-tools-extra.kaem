${TOOLS}/M2-Mesoplanet -f ungz.c -o ${BINDIR}/ungz
${TOOLS}/M2-Mesoplanet -f catm.c -o ${BINDIR}/catm
${TOOLS}/M2-Mesoplanet -f cp.c -o ${BINDIR}/cp
${TOOLS}/M2-Mesoplanet -f chmod.c -o ${BINDIR}/chmod
